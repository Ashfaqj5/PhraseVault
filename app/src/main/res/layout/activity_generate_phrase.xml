<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.GeneratePhraseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/selectCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Categories"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/rounded_corners">

            <CheckBox
                android:id="@+id/checkbox_alphabets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alphabets"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkbox_alphanumeric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alphanumeric"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkbox_numeric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numeric"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkbox_special_symbols"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Special Symbols"
                android:textSize="16sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/edittext_passphrase_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter passphrase length"
            android:inputType="number"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="@drawable/rounded_corners"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_generated_phrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:text="Generated Phrase will appear here"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/rounded_corners"
            android:textColor="@color/black" />

        <ProgressBar
            android:id="@+id/progressbar_strength_meter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:max="100"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_marginTop="16dp"
            android:progressDrawable="@drawable/progress_drawable" />

        <Button
            android:id="@+id/button_generate_phrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Phrase"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copy"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>
